<?import com.comp2042.tetris.view.component.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<Pane fx:controller="com.comp2042.tetris.view.GuiController"
      xmlns:fx="http://javafx.com/fxml" styleClass="game-background">
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel" visible="false"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

    <!-- Score font alignment and size -->
    <Label fx:id="scoreLabel" text="Score: 0" styleClass="scoreClass"
           layoutX="240" layoutY="10"
    />

    <!-- High Score display -->
    <Label fx:id="highScoreLabel" text="High Score: 0" styleClass="highScoreClass"
           layoutX="240" layoutY="40"
    />

    <!-- Hold Panel -->
    <VBox layoutX="240" layoutY="355" spacing="5">
        <Label text="HOLD" styleClass="nextBrickLabel"/>
        <GridPane fx:id="holdPanel" vgap="1" hgap="1" styleClass="nextBrick"/>
    </VBox>

    <!-- Next Brick Panel -->
    <GridPane fx:id="nextBrickPanel" layoutX="240" layoutY="100" vgap="1" hgap="1" styleClass="nextBrick"/>

    <!-- Level Display -->
    <VBox layoutX="80" layoutY="520" spacing="5" alignment="CENTER">
        <Label fx:id="levelLabel" styleClass="levelClass"/>
        <Label fx:id="linesLabel" styleClass="linesClass"/>
    </VBox>
</Pane>