<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="30"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.StartMenuController"
      styleClass="root">

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

    <Label text="TETRIS" styleClass="titleStyle"/>

    <VBox alignment="CENTER" spacing="15">
        <Button text="Start Game" onAction="#startGame" styleClass="menuButton" prefWidth="200"/>
        <Button text="Instructions" onAction="#showInstructions" styleClass="menuButton" prefWidth="200"/>
        <Button text="Exit" onAction="#exitGame" styleClass="menuButton" prefWidth="200"/>
    </VBox>

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
</VBox>